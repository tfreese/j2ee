<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>de.freese.j2ee.agentportal</groupId>
        <artifactId>agentportal</artifactId>
        <version>0.0.1-SNAPSHOT</version>
    </parent>

    <artifactId>agentportal-client</artifactId>
    <packaging>jar</packaging>

    <name>${project.groupId} - ${project.artifactId}</name>
    <description>Demo f√ºr J2EE Security (Client-Modul).</description>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>${version:org.codehaus.mojo:build-helper-maven-plugin}</version>
                <executions>
                    <execution>
                        <id>add-sources</id>
                        <phase>process-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>${basedir}/src/main/generated</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>jaxws-maven-plugin</artifactId>
                <version>${version:org.codehaus.mojo:jaxws-maven-plugin}</version>
                <executions>
                    <execution>
                        <id>generate-webservice-sources</id>
                        <!--phase>generate-sources</phase-->
                        <phase>none</phase>
                        <goals>
                            <goal>wsimport</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <sourceDestDir>${basedir}/src/main/generated</sourceDestDir>
                    <packageName>de.freese.agentportal.generated</packageName>
                    <!--wsdlFiles>
                    <wsdlFile>SecureWS.wsdl</wsdlFile>
                    </wsdlFiles -->
                    <wsdlUrls>
                        <wsdlUrl>http://localhost:8080/secretnews/SecretNewsWebService?wsdl</wsdlUrl>
                    </wsdlUrls>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <!-- compile scope -->
        <dependency>
            <groupId>${project.parent.groupId}</groupId>
            <artifactId>agentportal-common</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-web</artifactId>
            <version>${version:org.springframework:spring}</version>
        </dependency>

        <!-- runtime scope -->
        <!-- provided scope -->
        <!-- test scope -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>${version:junit:junit}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
            <version>${version:com.fasterxml.jackson:jackson}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>jcl-over-slf4j</artifactId>
            <version>${version:org.slf4j:slf4j}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-simple</artifactId>
            <version>${version:org.slf4j:slf4j}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
</project>
