<?xml version="1.0" encoding="UTF-8"?>
<server>

    <!-- jdbc driver-->
    <library id="h2Driver">
        <fileset dir="${server.config.dir}/jdbc" includes="h2-*.jar" />
    </library>

    <!-- <databaseStore id="defaultDatabaseStore" dataSourceRef="h2DS" /> -->
    <databaseStore id="DefaultDataSource" dataSourceRef="h2DS" />

    <dataSource
            id="h2DS"
            jndiName="jdbc/h2DS">

        <jdbcDriver
                libraryRef="h2Driver"
                javax.sql.XADataSource="org.h2.jdbcx.JdbcDataSource" />
        <properties
                url="jdbc:h2:mem:liberty;DB_CLOSE_DELAY=0;DB_CLOSE_ON_EXIT=true"
                user="sa"
                password="" />
        <connectionManager
                minPoolSize="1"
                maxPoolSize="3"
                maxIdleTime="10m"
                connectionTimeout="35s" />
    </dataSource>

</server>
