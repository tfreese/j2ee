<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns="https://jakarta.ee/xml/ns/persistence"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.1">

    <persistence-unit name="de.freese.test" transaction-type="JTA">
        <description>My Persistence Unit</description>
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <jta-data-source>jdbc/hsqldbDS</jta-data-source>

        <exclude-unlisted-classes>false</exclude-unlisted-classes>

        <properties>
            <property name="hibernate.transaction.jta.platform" value="de.freese.j2ee.liberty.config.jta.WebSphereLibertyJtaPlatform" />

            <!-- <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" /> --> <!-- Auto-detected -->

            <!-- <property name="javax.persistence.schema-generation.database.action" value="update" /> -->
            <!-- <property name="hibernate.javax.cache.provider" value="org.hibernate.cache.NoCacheProvider" /> -->
            <property name="hibernate.connection.isolation" value="2" /> <!-- Connection.TRANSACTION_READ_COMMITTED -->
        </properties>

    </persistence-unit>
</persistence>
