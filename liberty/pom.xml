<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>de.freese.j2ee</groupId>
		<artifactId>j2ee</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>

	<groupId>de.freese.j2ee.liberty</groupId>
	<artifactId>liberty</artifactId>
	<packaging>pom</packaging>

	<name>${project.groupId} - ${project.artifactId}</name>
	<description>Parent der Liberty Demos</description>

	<modules>
		<module>liberty-rest</module>
		<module>liberty-config</module>
		<module>liberty-cache</module>
		<module>liberty-spring</module>
	</modules>

	<properties>
		<version:io.openliberty:openliberty-runtime>18.0.0.3</version:io.openliberty:openliberty-runtime>
		<version:net.wasdev.maven.tools.targets:liberty-apis>${version:io.openliberty:openliberty-runtime}</version:net.wasdev.maven.tools.targets:liberty-apis>
		<version:org.glassfish:javax.json>1.1.4</version:org.glassfish:javax.json>
		<version:org.jboss.arquillian.container:arquillian-wlp-managed-8.5>1.0.0.CR1</version:org.jboss.arquillian.container:arquillian-wlp-managed-8.5>
		<version:org.jboss.arquillian.junit:1.4.0.Final>1.4.0.Final</version:org.jboss.arquillian.junit:1.4.0.Final>

		<version:net.wasdev.wlp.maven.plugins:liberty-maven-plugin>2.6.2</version:net.wasdev.wlp.maven.plugins:liberty-maven-plugin>
	</properties>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>net.wasdev.wlp.maven.plugins</groupId>
					<artifactId>liberty-maven-plugin</artifactId>
					<version>${version:net.wasdev.wlp.maven.plugins:liberty-maven-plugin}</version>
				</plugin>
			</plugins>
		</pluginManagement>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-clean-plugin</artifactId>
				<version>${version:org.apache.maven.plugins:maven-clean-plugin}</version>
				<configuration>
					<skip>false</skip>
					<filesets>
						<!--fileset>
							<directory>${java.io.tmpdir}/liberty</directory>
							<followSymlinks>false</followSymlinks>
							</fileset -->
					</filesets>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.jboss.arquillian.container</groupId>
				<artifactId>arquillian-wlp-managed-8.5</artifactId>
				<version>${version:org.jboss.arquillian.container:arquillian-wlp-managed-8.5}</version>
			</dependency>
			<dependency>
				<groupId>org.jboss.arquillian.junit</groupId>
				<artifactId>arquillian-junit-container</artifactId>
				<version>${version:org.jboss.arquillian.junit:1.4.0.Final}</version>
			</dependency>
			<dependency>
				<groupId>org.glassfish</groupId>
				<artifactId>javax.json</artifactId>
				<version>${version:org.glassfish:javax.json}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<dependencies>
		<!-- compile scope -->
		<!-- runtime scope -->
		<!-- provided scope -->
		<!-- test scope -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>${version:junit:junit}</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
</project>
