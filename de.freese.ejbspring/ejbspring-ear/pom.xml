<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>de.freese.ejbspring</groupId>
        <artifactId>ejbspring-parent</artifactId>
        <version>0.0.1-SNAPSHOT</version>
    </parent>

    <artifactId>ejbspring-ear</artifactId>
    <packaging>ear</packaging>

    <name>${project.groupId} - ${project.artifactId}</name>
    <description>Vermischung von EJB und dem Spring-Framework - ear</description>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-ear-plugin</artifactId>
                <version>2.9.1</version><!--2.10 erzeugt Fehler-->
                <configuration>
                    <defaultLibBundleDir>/lib</defaultLibBundleDir>
                    <skinnyWars>true</skinnyWars>
                    <!--finalName>ejbspring-ear.ear</finalName-->
                    <!--applicationName>ejbspring-ear</applicationName-->
                    <modules>
                        <ejbModule>
                            <groupId>de.freese.ejbspring</groupId>
                            <artifactId>ejbspring-logic</artifactId>
                            <!--bundleFileName>ejbspring-logic.jar</bundleFileName-->
                        </ejbModule>
                        <webModule>
                            <groupId>de.freese.ejbspring</groupId>
                            <artifactId>ejbspring-webapp</artifactId>
                            <!--bundleFileName>ejbspring-webapp.war</bundleFileName-->
                            <contextRoot>webapp</contextRoot>
                        </webModule>
                        <rarModule>
                            <groupId>de.freese.ejbspring</groupId>
                            <artifactId>ejbspring-jms-resource</artifactId>
                        </rarModule>
                    </modules>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>de.freese.ejbspring</groupId>
            <artifactId>ejbspring-logic</artifactId>
            <version>${project.version}</version>
            <type>ejb</type>
        </dependency>
        <dependency>
            <groupId>de.freese.ejbspring</groupId>
            <artifactId>ejbspring-webapp</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>de.freese.ejbspring</groupId>
            <artifactId>ejbspring-jms</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>de.freese.ejbspring</groupId>
            <artifactId>ejbspring-jms-resource</artifactId>
            <version>${project.version}</version>
            <type>rar</type>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>jcl-over-slf4j</artifactId>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-simple</artifactId>
        </dependency>
    </dependencies>

</project>
