<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd" version="2.0">

    <application>
        <action-listener>org.primefaces.application.DialogActionListener</action-listener>
        <navigation-handler>org.primefaces.application.DialogNavigationHandler</navigation-handler>
        <resource-handler>org.primefaces.application.resource.PrimeResourceHandler</resource-handler>
        <view-handler>org.primefaces.application.DialogViewHandler</view-handler>

        <!-- Damit SpringBeans als ManagedBeans verwendet werden kÃ¶nnen -->
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>

        <locale-config>
            <default-locale>de</default-locale>
            <supported-locale>en</supported-locale>
        </locale-config>

        <resource-bundle>
            <base-name>messages</base-name>
            <var>messages</var>
        </resource-bundle>
    </application>

    <navigation-rule>
        <from-view-id>/secured/date.xhtml</from-view-id>
        <navigation-case>
            <from-action>dateFormatted</from-action>
            <!--from-outcome>dateFormatted</from-outcome-->
            <to-view-id>/secured/dateFormatted.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
