<?xml version="1.0" encoding="UTF-8"?>
<!-- This is an unmanaged datasource. It should be used for proofs of concept
or testing only. It uses H2, a lightweight, in-memory, example database that
ships with WildFly. It is not robust or scalable, is not supported,
and should NOT be used in a production environment! -->
<datasources xmlns="http://www.jboss.org/ironjacamar/schema"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.jboss.org/ironjacamar/schema http://docs.jboss.org/ironjacamar/schema/datasources_1_0.xsd">
    <!-- The datasource is bound into JNDI at this location.-->
	<datasource jndi-name="java:jboss/datasources/datasources"
		pool-name="datasources" enabled="true" use-java-context="true">

		<connection-url>jdbc:h2:mem:datasources;DB_CLOSE_DELAY=-1</connection-url>

		<driver>h2</driver>
		<pool>
			<max-pool-size>10</max-pool-size>
		</pool>

		<security>
			<user-name>sa</user-name>
			<password></password>
		</security>
	</datasource>
</datasources>